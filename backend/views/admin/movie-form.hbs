<div class="w-full">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-6">{{#if movie}}Edit{{else}}Add New{{/if}} Movie</h2>
            
            <form action="/admin/movies{{#if movie}}/{{movie.id}}{{/if}}" method="POST" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium mb-1">Title</label>
                    <input type="text" name="title" value="{{movie.title}}" required
                        class="w-full px-3 py-2 border rounded">
                </div>
                
                <div>
                    <label class="block text-sm font-medium mb-1">Description</label>
                    <textarea name="description" rows="4" required
                        class="w-full px-3 py-2 border rounded">{{movie.description}}</textarea>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Thumbnail URL</label>
                        <input type="url" name="thumbnail" value="{{movie.thumbnail}}" required
                            class="w-full px-3 py-2 border rounded">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Backdrop URL</label>
                        <input type="url" name="backdrop" value="{{movie.backdrop}}" required
                            class="w-full px-3 py-2 border rounded">
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium mb-1">Genres (comma separated)</label>
                    <input type="text" name="genres" value="{{#if movie}}{{#each movie.genres}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}{{/if}}" required
                        class="w-full px-3 py-2 border rounded" placeholder="Action, Drama, Comedy">
                </div>
                
                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Duration (minutes)</label>
                        <input type="number" name="duration" value="{{movie.duration}}" required
                            class="w-full px-3 py-2 border rounded">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Rating</label>
                        <input type="number" step="0.1" name="rating" value="{{movie.rating}}" required
                            class="w-full px-3 py-2 border rounded">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Release Date</label>
                        <input type="date" name="releaseDate" value="{{movie.releaseDate}}" required
                            class="w-full px-3 py-2 border rounded">
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium mb-1">Video URL</label>
                    <input type="url" name="videoUrl" value="{{movie.videoUrl}}"
                        class="w-full px-3 py-2 border rounded" placeholder="https://...">
                </div>
                
                <div class="flex gap-4">
                    <label class="flex items-center">
                        <input type="checkbox" name="isFeatured" {{#if movie.isFeatured}}checked{{/if}}
                            class="mr-2">
                        Featured
                    </label>
                    <label class="flex items-center">
                        <input type="checkbox" name="isPremium" {{#if movie.isPremium}}checked{{/if}}
                            class="mr-2">
                        Premium
                    </label>
                </div>
                
                <div class="flex gap-4">
                    <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition shadow-md">
                        <i class="fas fa-save mr-2"></i>{{#if movie}}Update{{else}}Create{{/if}} Movie
                    </button>
                    <a href="/admin/movies" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 text-center transition shadow-md">
                        <i class="fas fa-times mr-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
